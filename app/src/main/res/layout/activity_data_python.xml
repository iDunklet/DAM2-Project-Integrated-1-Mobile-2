<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gráficos Generados"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Gráfico 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos por Jugador"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/chartImagePoints"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"
            android:background="@android:color/darker_gray" />

        <!-- Gráfico 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo vs Puntos"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/chartImageRelation"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"
            android:background="@android:color/darker_gray" />

        <!-- Gráfico 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Árbol de Decisión"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/chartImageTree"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray" />

    </LinearLayout>
</ScrollView>