<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <!-- Zona izquierda (70%) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zonaIzquierda"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zonaDerecha"
        app:layout_constraintWidth_percent="0.7">

        <!-- Fondo de la zona -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/game_background" />

        <ImageView
            android:id="@+id/gato_imagen"
            android:layout_width="241dp"
            android:layout_height="245dp"
            android:src="@drawable/happy_cat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Zona derecha (30%) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zonaDerecha"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/zonaIzquierda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.3"
        android:background="@color/grey">

        <!-- BotÃ³n mike-->
        <ImageButton
            android:id="@+id/buttonMike"
            android:layout_width="271dp"
            android:layout_height="361dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/button_mike_selector"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- corazones -->
        <LinearLayout
            android:id="@+id/layoutCorazones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/hearts"
                android:layout_height="@dimen/hearts"
                android:src="@drawable/heart" />

            <ImageView
                android:layout_width="@dimen/hearts"
                android:layout_height="@dimen/hearts"
                android:src="@drawable/heart" />

            <ImageView
                android:layout_width="@dimen/hearts"
                android:layout_height="@dimen/hearts"
                android:src="@drawable/heart" />
        </LinearLayout>

        <!-- linea de carga -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Barra que se rellena -->
            <View
                android:id="@+id/barraRelleno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/clear_blue" />

            <!-- Imagen de la barra -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/progress_bar"
                android:scaleType="fitXY" />
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- efecto pause -->

    <View
        android:id="@+id/pauseEfect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/butonPausa"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="@drawable/button_pause_selector"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
